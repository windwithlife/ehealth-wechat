
.square_con{
    position: relative;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
}
.login_con_2_title_1{
    font-size: 36rpx;
    color: #aeaeae;
}
.login_con_2_title_2{
    color: #aeaeae;
    font-size: 36rpx;
    margin-bottom: 36rpx;
}
.auth_login_btn{
    z-index: 99;
    position: fixed;
    bottom: 0;
    width: 100vw;
    border: 1rpx solid #AB956D;
    background-color: #AB956D;
    color: #fff;
}
.login_con{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgb(0 0 0 / 0.2);
    z-index: 99;
}
.login_con_2{
    position: absolute;
    width: 80vw;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    padding: 24rpx;
    background-color: #fff;
    border-radius: 12rpx;
}
.btn{
    width: 240rpx;
    display: inline-block;
    margin-left: 12rpx;
    margin-top: 12rpx;
    background-color: #AB956D;
    color: #fff;
}
.slide_image_con{
    position: relative;
}
.slide_image_desc{
    position: absolute;
    top:10rpx;
    left: 20rpx;
    color: #fff;
    font-size: 38rpx;
}
.slide_image{
    width: 100%;
    height: 100%;
}
.live_dlivery_con{
 /* margin-top: 20rpx; */
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid grey;
}

.live_dlivery_desc{
    margin-left: 20rpx;
    font-size: 38rpx;
}
.live_dlivery_swiper_con{
    position: relative;
    display: inline-block;
    width: 460rpx;
    height: 260rpx;
    margin-left: 20rpx;
}
.live_dlivery_swiper_desc{
    position: absolute;
    bottom: 20rpx;
    left: 0;
    right: 0;
    text-align: center;
