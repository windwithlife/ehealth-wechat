@import "../../common/lib/weui.wxss";

.page-body{
  position: relative;
}
.info_get_con{
  position: absolute;
  background-color:rgb(174 174 174 / 0.6);
  width: 100vw;
  height: 100vh;
  z-index: 100;
}
.info_get{
  position: absolute;
  top:50%;
  left: 50%;
  width: 64%;
  background-color:#fff;
  transform: translate(-50%,-50%);
  padding: 50rpx 48rpx;
  border-radius: 17rpx;
}
.info_get_title{
  text-align: center;
  font-size: 30rpx;
  color: #454545;
}
.info_get_submit{
  width: 300rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #AB956D;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
}
.please_select{
  position: absolute;
  right: 20rpx;
  top:50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #333;
}
.info_get_content_con{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 48rpx;
}
.info_get_content_con_l{
  width:20%;
}
.info_get_content_con_r_province{
  text-align: right;
  flex-grow: 1;  
}
.provice_con{
  position: relative;
  flex-grow: 1;
}
.info_get_content_con_r{
  border-radius: 31rpx;
  border: 1rpx solid #f1f1f1;
  flex-grow: 1;  
  background-color: #f1f1f1;
  font-size: 28rpx;
  color: #999;
  padding-left: 33rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.mantle_con{
  position: absolute;
  top:0;
  height: 225px;
  background-color:rgba(15, 41, 77, 0.5);
  width: 100%;
  z-index: 9;
}
video {
  width: 100%;
}
.van-count-down{
  font-size: 48rpx !important;
  color: #fff !important;
  position: absolute;
  top:50%;
  left: 0;
  right: 0;
  text-align: center;
  transform: translateY(-50%);
}

.weui-cells{
  margin: 20px 15px 0;
  text-align: left;
}
.weui-label{
  width: 5em;
}
.auto-rotate-container {
  margin: 20px 20px 0;
  display: flex;
  justify-content: space-between;
}

.video-container {
  margin: 11px 3px;
  display: flex;
  justify-content: center;
}


.main_desc_title{
  font-size: 36rpx;
  font-weight: bolder;
}

.main_desc_content_con{
  padding: 20rpx;
  /* padding-left: 20rpx; */
  /* padding-right: 20rpx; */

}
.main_desc_con{
  display: flex;
  justify-content: space-between;
}
.main_desc_con_text{
  padding-left: 20rpx;
}

.teacther_intro_con{
  background-color: aliceblue;
  padding:20rpx
}
.teacther_intro_desc{
  padding-bottom: 20rpx;
}

.teacther_intro_title_con{
  display: flex;
  flex-direction: row;
}
.teacther_intro_title_con_left{
  width: 240rpx;
  height: 320rpx;
}
.img{
  width: 100%;
  height: 100%;
}
.teacther_intro_title_con_right{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: space-between;
  width: calc(100% - 240rpx);
}